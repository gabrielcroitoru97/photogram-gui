<h1>Show Details</h1>
<dl>
  <dt>Image</dt>
  <dd><img src="<%= @the_photo.image%>" style="width:300px;"></dd>

  <dt>Caption</dt>
  <dd><%=@the_photo.caption%></dd>

  <dt>Owner</dt>
  <dd><%=@the_photo.poster.username%></dd>

  <dt>Posted</dt>
  <dd><%=@the_photo.created_at%></dd>

  <dt>Edit photo</dt>
  <dd>
    <form action="/edit_photo/<%=@the_photo.id%>" method="post">
      <label for="url_box">Image</label>
      <input type="text" id="url_box" name="new_url" value=<%=@the_photo.image%>>

      <label for="caption_box">Caption</label>
      <textarea id="caption_box" name="new_caption"><%=@the_photo.caption%></textarea>

      <button>Update photo</button>
  </dd>

  <dt>Delete Photo</dt>
  <dd><a href="/delete_photo/<%=@the_photo.id%>">Delete this photo</a></dd>
</dl>

<h1>Comments</h1>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <%comments=@the_photo.comments%>
  <%comments.each do |a_comment|%>
  <tr>
    <td><%=a_comment.commenter.username%></td>
    <td><%=a_comment.body%></td>
    <td><%=a_comment.created_at%></td>
  </tr>
  <%end%>

</table>

<h2>Add a new comment</h2>
<form action="/add_caption" method="post">
      <label for="photo_id_box">Photo ID</label>
      <input type="text" id="photo_id_box" name="photo_id" value=<%=@the_photo.id%>>

      <label for="author_id_box">Author ID</label>
      <input type="text" id="author_id_box" name="author_id" placeholder="Enter your author ID">

      <label for="comment_box">Comment</label>
      <textarea type="text" id="comment_box" name="comment" placeholder="Enter a comment"></textarea>

      <button>Add comment</button>
</form>
